<Window x:Class="motitask.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:motitask"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Альтернативи" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="100" Click="OpenAlternative"/>
        <Button Content="Критерії" HorizontalAlignment="Left" Margin="120,50,0,0" VerticalAlignment="Top" Width="100" Click="OpenCriterion"/>
        <Button Content="Оцінки" HorizontalAlignment="Left" Margin="230,50,0,0" VerticalAlignment="Top" Width="100" Click="OpenMark"/>
        <Button Content="Люди" HorizontalAlignment="Left" Margin="340,50,0,0" VerticalAlignment="Top" Width="100" Click="OpenLPR"/>
        <Button Content="Векторні описання" HorizontalAlignment="Left" Margin="450,50,0,0" VerticalAlignment="Top" Width="100" Click="OpenVector"/>
        <Button Content="Додати дрон" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="100" Click="AddDrone"/>
        <Button Content="Гра на підтвердження лідерства" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="200" Click="LeaderGames"/>
    </Grid>
</Window>
